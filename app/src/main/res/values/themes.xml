<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.FileBeam" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorBlue700</item>
        <item name="colorPrimaryVariant">@color/colorBlue700</item>
        <item name="colorSecondary">@color/colorBlue700</item>
        <item name="colorSecondaryVariant">@color/colorBlue700</item>
        <item name="colorPrimaryDark">?screenBackgroundColor</item>
        <item name="colorAccent">@color/colorBlue700</item>
        <item name="android:colorBackground">?screenBackgroundColor</item>
        <item name="android:windowIsTranslucent">true</item> <!--Disables default splash screen-->
        <item name="android:navigationBarColor">?screenBackgroundColor</item>
        <item name="primaryButtonColorFirst">@color/colorBlue600</item>
        <item name="primaryButtonColorSecond">@color/colorViolet400</item>
        <item name="primaryButtonColorPressedFirst">@color/colorBlue700</item>
        <item name="primaryButtonColorPressedSecond">@color/colorViolet500</item>
        <item name="primaryBlueColor">@color/colorBlue600</item>
        <item name="primaryVioletColor">@color/colorViolet400</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="colorBlue600A16AndA30">@color/colorBlue600Alpha16</item>
        <item name="colorViolet400A20AndA30">@color/colorViolet400Alpha20</item>
    </style>

    <!--To enable dark theme, just delete .Light and change theme in Manifest-->
    <style name="Theme.FileBeam.Light" parent="Base.Theme.FileBeam">
        <item name="screenBackgroundColor">@color/colorLightBackground</item>
        <item name="primaryTextColor">@color/colorNeutral900</item>
        <item name="secondaryTextColor">@color/colorNeutral500</item>
        <item name="errorBorderColor">@color/colorRed600</item>
        <item name="errorInsideColor">@color/colorRed50</item>
        <item name="primaryErrorColor">@color/colorRed600</item>
        <item name="colorNeutral300AndNeutral700">@color/colorNeutral300</item>
        <item name="colorNeutral100AndNeutral800">@color/colorNeutral100</item>
        <item name="progressBarBackground">@color/colorNeutral200</item>
        <item name="bottomSheetHandlerColor">@color/colorNeutral300</item>
        <item name="disabledContinueButtonFirstColor">@color/colorBlueDisabledButtonLight</item>
        <item name="disabledContinueButtonSecondColor">@color/colorVioletDisabledButtonLight</item>
        <item name="disabledTextColor">@color/colorDisabledTextLight</item>
        <item name="colorNeutral400AndNeutral500">@color/colorNeutral400</item>
        <item name="considerLaterIconColor">@color/colorNeutral600</item>
        <item name="primaryTextColorReverse">@color/colorNeutral1</item>
        <item name="primaryGrayColor">@color/colorNeutral400</item>
        <item name="loginButtonBackgroundColor">@color/colorNeutral1Alpha20</item>
        <item name="colorNeutral200And700">@color/colorNeutral200</item>
        <item name="colorNeutral700And200">@color/colorNeutral700</item>
        <item name="colorNeutral1AndNeutral999">@color/colorNeutral1</item>
        <item name="colorNeutral200And600">@color/colorNeutral200</item>
        <item name="colorNeutral50And800">@color/colorNeutral50</item>
        <item name="colorNeutral600And300">@color/colorNeutral600</item>
        <item name="colorNeutral300And600">@color/colorNeutral300</item>
        <item name="colorNeutral600And400">@color/colorNeutral600</item>
        <item name="colorBlue600A10AndA20">@color/colorBlue600Alpha10</item>
        <item name="colorViolet400A10AndA20">@color/colorViolet400Alpha10</item>
        <item name="colorScreenBackgroundColorAndNeutral800">?screenBackgroundColor</item>
        <item name="colorNeutral900AndWhite">@color/colorNeutral900</item>
        <item name="colorTransparentAndBlack">@android:color/transparent</item>
        <item name="backgroundAuthentication">@drawable/background_authentication</item>
        <item name="backgroundForceUpdate">@drawable/background_force_update</item>
        <item name="colorFloatingBottomSheetBackground">@color/colorNeutral1</item>
        <item name="colorNeutral500And300">@color/colorNeutral500</item>
        <item name="colorNeutral500And400">@color/colorNeutral500</item>
        <item name="colorNeutral700And100">@color/colorNeutral700</item>
        <item name="colorNeutral100And800">@color/colorNeutral100</item>
        <item name="colorNeutral400And600">@color/colorNeutral400</item>
        <item name="colorNeutral1AndNeutral700">@color/colorNeutral1</item>
        <item name="colorNeutral1AndNeutral500">@color/colorNeutral1</item>
        <item name="colorNeutral1AndNeutral600">@color/colorNeutral1</item>
        <item name="colorNeutral1AndNeutral900">@color/colorNeutral1</item>
        <item name="colorNeutral1AndNeutral850">@color/colorNeutral1</item>
    </style>

    <!--    Recreate animation-->
    <style name="RecreateStyle" parent="Theme.FileBeam.Light">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Base.Theme.FileBeam">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/colorNeutral999Alpha60</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="MainBottomSheetStyle">
        <item name="android:background">@drawable/drawable_round_corners</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/drawable_round_corners</item>
    </style>

    <style name="ContentText">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">?primaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HintTextStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">?secondaryTextColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearanceRegular">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearanceMedium">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="MainScreenStyle">
        <item name="android:background">?screenBackgroundColor</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">?primaryTextColor</item>
        <item name="android:textCursorDrawable">@drawable/drawable_cursor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ListItemStyle">
        <item name="android:background">@drawable/background_list_item</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">start|center</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="backgroundTint">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="DropDownButtonStyle">
        <item name="android:drawableEnd">@drawable/ic_arrow_down</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">start|center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">?primaryTextColor</item>
        <item name="android:textColorHint">?colorNeutral600And400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FilterButtonStyle" parent="DropDownButtonStyle">
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
        <item name="android:textColor">?primaryTextColor</item>
        <item name="android:textColorHint">?colorNeutral600And400</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">22dp</item>
        <item name="android:drawableTint">@color/colorNeutral500</item>
        <item name="android:backgroundTint">?colorNeutral50And800</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="strokeColor">?attr/colorNeutral300AndNeutral700</item>
    </style>

    <style name="ProfileSectionButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="minWidth">0dp</item>
        <item name="minHeight">0dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">@color/colorBlue600Alpha10</item>
    </style>

    <style name="ProfileSectionTextStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?primaryTextColor</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
    </style>

    <style name="ToolbarTitleTextStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?primaryTextColor</item>
    </style>

    <style name="SearchEditText">
        <item name="android:background">@drawable/background_search_box</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:hint">@string/app_name</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textColorHint">@color/colorNeutral500</item>
        <item name="android:textCursorDrawable">@drawable/drawable_cursor</item>
    </style>

    <!-- PlayfairDisplay -->
    <style name="PlayfairDisplayDimen38TextStyle">
        <item name="android:fontFamily">@font/playfairdisplay_medium</item>
