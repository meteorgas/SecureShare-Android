<resources>
    <!-- Base application theme. -->
    <style name="Theme.SecureShare" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">#5B6EF4</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">#DEE0FF</item>
        <item name="colorOnPrimaryContainer">#1A1C2D</item>

        <!-- Secondary color -->
        <item name="colorSecondary">#A8B0FF</item>
        <item name="colorOnSecondary">#1A1C2D</item>
        <item name="colorSecondaryContainer">#E0E3FF</item>
        <item name="colorOnSecondaryContainer">#1A1C2D</item>

        <!-- Background and surface -->
        <item name="android:colorBackground">#FAF9FF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#1A1C2D</item>

        <!-- App bar and status bar -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Shapes -->
        <item name="shapeAppearanceSmallComponent">@style/Shape.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/Shape.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/Shape.Large</item>
    </style>
</resources>