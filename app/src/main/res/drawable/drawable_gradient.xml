<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#40093460">
    <item>
        <selector>

            <item
                android:state_enabled="true"
                android:state_pressed="false">
                <shape android:shape="rectangle">

                    <corners android:radius="50dp" />

                    <gradient
                        android:endColor="?primaryButtonColorSecond"
                        android:startColor="?primaryButtonColorFirst" />
                </shape>
            </item>

            <item
                android:state_enabled="false"
                android:state_pressed="false">
                <shape android:shape="rectangle">

                    <corners android:radius="50dp" />

                    <gradient
                        android:endColor="?disabledContinueButtonSecondColor"
                        android:startColor="?disabledContinueButtonFirstColor" />
                </shape>
            </item>

            <item android:state_pressed="true">
                <shape android:shape="rectangle">

                    <corners android:radius="50dp" />

                    <gradient
                        android:endColor="?primaryButtonColorPressedSecond"
                        android:startColor="?primaryButtonColorPressedFirst" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>
