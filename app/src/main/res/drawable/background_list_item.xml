<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorMiddleBlue600Violet400Alpha5">
    <item>
        <selector>
            <item android:state_selected="false">
                <shape android:shape="rectangle">
                    <corners android:radius="50dp" />

                    <solid android:color="?attr/colorNeutral100AndNeutral800" />
                    <stroke
                        android:width="0.5dp"
                        android:color="?attr/colorNeutral300AndNeutral700" />
                </shape>
            </item>

            <item android:state_selected="true">
                <layer-list>

                    <item>
                        <shape android:shape="rectangle">
                            <corners android:radius="50dp" />
                            <gradient
                                android:endColor="@color/colorViolet400"
                                android:startColor="#178AFE" />
                        </shape>
                    </item>

                    <item
                        android:bottom="1dp"
                        android:left="1dp"
                        android:right="1dp"
                        android:top="1dp">
                        <shape android:shape="rectangle">
                            <corners android:radius="50dp" />
                            <solid android:color="?attr/screenBackgroundColor" />
                        </shape>
                    </item>

                    <item
                        android:bottom="1dp"
                        android:left="1dp"
                        android:right="1dp"
                        android:top="1dp">
                        <shape android:shape="rectangle">
                            <corners android:radius="50dp" />
                            <gradient
                                android:endColor="#1A7063E3"
                                android:startColor="#1A178AFE" />
                        </shape>
                    </item>

                </layer-list>
            </item>
        </selector>
    </item>
</ripple>